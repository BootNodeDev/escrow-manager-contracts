{
  "name": "poc-escrow-manager-contracts",
  "version": "1.0.0",
  "repository": "https://github.com/BootNodeDev/poc-escrow-manager-contracts.git",
  "license": "UNLICENSED",
  "scripts": {
    "compile": "hardhat compile",
    "compile-zk": "ZK=true hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "gas-report": "REPORT_GAS=true hardhat test",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --config .prettierrc --list-different \"**/*.{js,sol,ts}\"",
    "size-contracts": "hardhat size-contracts",
    "deploy:goerli:impl": "hardhat run scripts/deployVestingEscrowImpl.ts --network goerli",
    "deploy:goerli:factory": "hardhat run scripts/deployEscrowFactory.ts --network goerli",
    "deploy:mainnet:impl": "hardhat run scripts/deployVestingEscrowImpl.ts --network mainnet",
    "deploy:mainnet:factory": "hardhat run scripts/deployEscrowFactory.ts --network mainnet",
    "deploy:zkTestnet:impl": "hardhat run scripts/deployVestingEscrowImplZk.ts --network zkSyncTestnet",
    "deploy:zkTestnet:factory": "hardhat run scripts/deployEscrowFactoryZk.ts --network zkSyncTestnet",
    "deploy:zk:impl": "hardhat run scripts/deployVestingEscrowImplZk.ts --network zkSync",
    "deploy:zk:factory": "hardhat run scripts/deployEscrowFactoryZk.ts --network zkSync"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@matterlabs/hardhat-zksync-deploy": "^0.6.3",
    "@matterlabs/hardhat-zksync-solc": "^0.3.17",
    "@matterlabs/hardhat-zksync-verify": "^0.1.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "chai": "^4.2.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "ethers": "^5.4.7",
    "hardhat": "^2.11.2",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0",
    "zksync-web3": "^0.14.3"
  }
}
